{
	"name": "among-humans-io",
	"version": "1.0.0",
	"description": "A Real-Time Multiplayer Social Deduction Game with AI",
	"main": "dist/server.js",
	"scripts": {
		"start": "NODE_ENV=production node dist/server.js",
		"dev": "concurrently \"pnpm:dev:server\" \"pnpm:dev:client\"",
		"dev:server": "ts-node-dev --respawn src/server.ts",
		"dev:client": "vite",
		"build": "pnpm install && pnpm run lint && pnpm run format && pnpm run typecheck && pnpm test && pnpm run build:server && pnpm run build:client",
		"build:server": "tsc -p tsconfig.server.json",
		"build:client": "vite build",
		"preview": "vite preview",
		"lint": "biome check --write .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"knip": "knip",
		"check": "pnpm run lint && pnpm run typecheck && pnpm test && pnpm run knip"
	},
	"engines": {
		"node": ">=22.0.0"
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"dotenv": "17.2.3",
		"express": "5.1.0",
		"openai": "6.8.1",
		"socket.io": "4.8.1",
		"socket.io-client": "4.8.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@tailwindcss/vite": "4.1.17",
		"@types/express": "5.0.5",
		"@types/node": "24.10.1",
		"concurrently": "9.2.1",
		"knip": "^5.69.0",
		"tailwindcss": "4.1.17",
		"ts-node-dev": "2.0.0",
		"typescript": "5.9.3",
		"vite": "7.2.2",
		"vitest": "4.0.8"
	}
}
